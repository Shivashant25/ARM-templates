{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
    "parameters":{
        "VnetName": {
            "type": "string",
            "defaultValue": "demovnet",
            "minLength": 3         
        },
        "SubnetName": {
            "type": "string",
            "defaultValue": "demosubnet"
        },
        "StorageName": {
            "type": "string",
            "defaultValue": "demostorage"
        },
        "nsgName": {
            "type": "string",
            "defaultValue": "demonsg"
        },
        "netinterfacecardName": {
            "type": "string",
            "defaultValue": "demonic"

        },
        "VMname":{
            "type": "string",
            "defaultValue": "demovm"
        },
        "vmpass": {
            "type": "securestring",
            "minLength": 3,
            "maxLength": 15

        }


    },
    "variables":{
        "pubipname": "shivpublicip",
        "defaultlocation": "[resourceGroup().location]"

    },
    "resources": [
        {
            "name": "[variables('pubipname')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiversion": "2015-06-15",
            "location": "[variables('defaultlocation')]",
            "properties":{
                "IPversion": "IPv4",
                "SKU": "standard",
                "tier": "regional",
                "publicIPAllocationmethod": "dynamic"
            }
        },
        {
            "name": "[parameters('VnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('SubnetName')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            }
        },
     {
         "name": "[parameters('StorageName')]",
         "type": "Microsoft.Storage/storageAccounts",
         "apiVersion": "2019-06-01",
         "location": "[variables('defaultlocation')]",
         "sku": {
             "name": "Standard_LRS"
         },
         "kind": "Storage"
     },
     {
         "name": "[parameters('nsgName')]",
         "type": "Microsoft.Network/networkSecurityGroups",
         "apiVersion": "2015-06-15",
         "location": "[variables('defaultlocation')]",
         "properties": {
             "securityRules": [
                 {
                     "name": "rule1",
                     "properties": {
                         "protocol": "*",
                         "sourcePortRange": "*",
                         "destinationPortRange": "*",
                         "sourceAddressPrefix": "*",
                         "destinationAddressPrefix": "*",
                         "access": "Allow",
                         "priority": 100,
                         "direction": "Inbound"
                     }
                 }
             ]
         }
     },
     {
         "name": "[parameters('netinterfacecardName')]",
         "type": "Microsoft.Network/networkInterfaces",
         "apiVersion": "2015-06-15",
         "location": "[variables('defaultlocation')]",
         "dependsOn":[
             "[resourceId('Microsoft.Network/publicIPAddresses',variables('pubipname'))]",
             "[resourceId('Microsoft.Network/virtualNetworks',parameters('VnetName'))]"
         ],
           "properties": {
             "ipConfigurations": [
                 {
                     "name": "ipConfig1",
                     "properties": {
                         "privateIPAllocationMethod": "Dynamic",
                         "publicIPAddress": {
                             "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('pubipname'))]"
                         },
                         "subnet": {
                             "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('VnetName'),parameters('SubnetName') )]"
                         }
                     }
                 }
             ]
         }
     },
     {
         "name": "[parameters('VMname')]",
         "type": "Microsoft.Compute/virtualMachines",
         "apiVersion": "2019-07-01",
         "location": "[variables('defaultlocation')]",
         "dependsOn": [
             "[resourceId('Microsoft.Storage/storageAccounts',parameters('StorageName'))]",
             "[resourceId('Microsoft.Network/networkInterfaces',parameters('netinterfacecardName'))]"
         ],

         "properties": {
             "hardwareProfile": {
                 "vmSize": "Standard_A2_v2"
             },
             "osProfile": {
                 "computerName": "demovmshiv",
                 "adminUsername": "demouser",
                 "adminPassword": "[parameters('vmpass')]"
             },
             "storageProfile": {
                 "imageReference": {
                     "publisher": "MicrosoftWindowsServer",
                     "offer": "WindowsServer",
                     "sku": "2012-R2-Datacenter",
                     "version": "latest"
                 },
                 "osDisk": {
                     "name": "demovmsOSDisk",
                     "caching": "ReadWrite",
                     "createOption": "FromImage"
                 }
             },
             "networkProfile": {
                 "networkInterfaces": [
                     {
                         "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('netinterfacecardName'))]"
                     }
                 ]
             }
         }
     }
    ]
}